<% provide(:title, "My Events") %>

<h1>
  <%= @user.name %>'s Events
</h1>

<h3>
  My Hosted Events
</h3>
<% if @user.created_events.any? %>
  <% @user.created_events.each do |event| %>
    <%= render 'event', :event => event %>
  <% end %>
<% end %>

<h3>
  My Upcoming Events
</h3>
<% if @upcoming_events.any? %>
  <% @upcoming_events.each do |event| %>
    <%= render 'event', :event => event %>
  <% end %>
<% end %>

<h3>
  My Past Events
</h3>
<% if @past_events.any? %>
  <% @past_events.each do |event| %>
    <%= render 'event', :event => event %>
  <% end %>
<% end %>
