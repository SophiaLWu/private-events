<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f. submit "Log in" %>
    <% end %>
  </div>
</div>